package pacote;

import java.util.Scanner;

public class Caracteristicas {
	
	public int pontos, pontosiniciais=15;
	public Scanner Scan = new Scanner(System.in);
	public static String[] caracteristicas = {"Força", "Intelgência", "Carisma", "Agilidade"};
	public void Ex1() {
		String[] cars = {"Volvo", "BMW", "Ford", "Mazda"};
		for (String i : cars) {
		  System.out.println(i);
		}
	}
	public void Ex2() {
		System.out.print("As características são: " + Caracteristicas.caracteristicas);
		pontos = Scan.nextInt();
		/*System.out.println(caracteristicas[pontos]);*/
		if(pontos>=1 || pontos<=7) {
			Switch();
		}else
		if(pontos>7) {
			
		}
		
	}
	public void Switch() {
		switch (pontos) {
		  case 1:
		    System.out.println("Força");
		    break;
		  case 2:
		    System.out.println("Intelgência");
		    break;
		  case 3:
		    System.out.println("Carisma");
		    break;
		  case 4:
		    System.out.println("Agilidade");
		    break;
		    default:
				System.out.println("Você digitou um número fora dos falados");
				Ex2();
		}
	}
}
